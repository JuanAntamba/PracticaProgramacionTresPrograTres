<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaProgramacionTresPrograTres.Views.CrearSuscripcionPage"
             Title="Juan Antamba - 10/07/2004">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry Placeholder="Servicio" Text="{Binding Servicio}" />

        <Entry Placeholder="Correo Asociado" Text="{Binding CorreoAsociado}" Keyboard="Email" />

        <Entry Placeholder="Costo Mensual" Keyboard="Numeric" Text="{Binding CostoMensualStr}" />

     
        <HorizontalStackLayout>
            <Label Text="Renovación automática" VerticalOptions="Center" />
            <Switch IsToggled="{Binding RenovacionAutomatica}" />
        </HorizontalStackLayout>

        <Button Text="Guardar" Command="{Binding GuardarCommand}" />

    </VerticalStackLayout>
</ContentPage>
